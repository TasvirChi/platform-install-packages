#!/usr/bin/make -f
COMP_NAME ?= borhan-postinst

DEB_VERSION := $(shell dpkg-parsechangelog | egrep '^Version:' | cut -f 2 -d ' ')
RC_FILE :=../../build/sources.rc
BORHAN_POSTINST_VERSION ?= $(shell egrep '^BORHAN_POSTINST_VERSION=' $(RC_FILE) | cut -d = -f 2| sed 's@"@@g')
SOURCE_PACKAGING_DIR ?= $(shell egrep '^SOURCE_PACKAGING_DIR=' $(RC_FILE) | cut -d = -f 2| sed 's@"@@g')
BORHAN_PREFIX ?= $(shell egrep '^BORHAN_PREFIX=' $(RC_FILE) | cut -d = -f 2| sed 's@"@@g')
include ../includes/build-revision.mk
archive := $(SOURCE_PACKAGING_DIR)/borhan-postinst-$(BORHAN_POSTINST_VERSION).tar.gz
tree := postinst

clean:
	dh_clean
	rm -rf $(tree) 
	rm -rf debian/tmp

$(archive):
	~/sources/platform-install-packages/build/package_borhan_postinst.sh

$(tree): $(archive)
	tar zxf $(archive)

build: $(tree)

install: build

binary-indep: install
	dh_installdirs
	dh_install $(tree)/* $(BORHAN_PREFIX)/bin
	dh_gencontrol -u-v$(DEB_VERSION) 
	dh_installdebconf
	dh_installdeb
	dh_builddeb 

binary: binary-indep
.PHONY: clean build binary-indep binary-arch binary
