#! /bin/sh

set -e

case "$1" in
  install|upgrade)
    if [ -n "$2" ] && dpkg --compare-versions "$2" lt 5.1.0-1
    then
      ucf --purge /opt/borhan/app/configurations/php/conf.d/apcu.ini
    fi
    if test -e /opt/borhan/app/configurations/php/conf.d/apcu.ini
    then
      sed s/^\;extension/extension/ -i /opt/borhan/app/configurations/php/conf.d/apcu.ini
      dpkg-maintscript-helper mv_conffile /opt/borhan/app/configurations/php/conf.d/apcu.ini \
          /opt/borhan/app/configurations/php/mods-available/apcu.ini 5.1.0-1 -- "$@"
      rm -f /opt/borhan/app/configurations/php/conf.d/apcu.ini
    fi
    ;;
  abort-upgrade)
    ;;
  *)
    echo "preinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

#DEBHELPER#

exit 0
