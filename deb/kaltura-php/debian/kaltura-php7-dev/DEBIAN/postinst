#!/bin/sh

set -e



if [ "$1" != "configure" ]; then
    exit 0
fi

for i in php-config phpize; do
        update-alternatives \
          --install /usr/bin/"$i" $i /opt/borhan/bin/"$i" 50 \
          --slave /opt/borhan/share/man/man1/"$i".1.gz "$i".1.gz /opt/borhan/share/man/man1/"$i"7.1.gz
done
exit 0
