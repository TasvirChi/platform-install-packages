#!/usr/bin/make -f

DEB_VERSION := $(shell dpkg-parsechangelog | egrep '^Version:' | cut -f 2 -d ' ')
RC_FILE :=../../build/sources.rc
KUPLOAD_VERSION ?= $(shell egrep '^KUPLOAD_VERSION=' $(RC_FILE) | cut -d = -f 2| sed 's@"@@g')
SOURCE_PACKAGING_DIR ?= $(shell egrep '^SOURCE_PACKAGING_DIR=' $(RC_FILE) | cut -d = -f 2| sed 's@"@@g')
BORHAN_PREFIX ?= $(shell egrep '^BORHAN_PREFIX=' $(RC_FILE) | cut -d = -f 2| sed 's@"@@g')
KUPLOAD_PREFIX=$(BORHAN_PREFIX)/web/flash/kupload
include ../includes/build-revision.mk
archive := $(SOURCE_PACKAGING_DIR)/borhan-kupload-$(KUPLOAD_VERSION).zip
tree := $(KUPLOAD_VERSION)

clean:
	dh_clean
	rm -rf $(tree) 
	rm -rf debian/tmp

$(archive):
	$(SOURCE_PACKAGING_DIR)/platform-install-packages/build/package_borhan_kupload.sh	

$(tree): $(archive)
	unzip -qq -o $(archive)

build: $(tree)

install: build

binary-indep: install
	dh_installdirs
	rm -rf $(KUPLOAD_PREFIX)
	mkdir -p $(KUPLOAD_PREFIX)
	mv $(tree) $(KUPLOAD_PREFIX)/
	dh_install $(KUPLOAD_PREFIX)
	dh_gencontrol -u-v$(DEB_VERSION) 
	dh_installdebconf
	dh_installdeb
	dh_builddeb 

binary: binary-indep
.PHONY: clean build binary-indep binary-arch binary
