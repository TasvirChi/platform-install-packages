[Unit]
Description=Borhan Live Analytics Driver
After=cassandra.service

[Service]
Type=forking
PIDFile=/opt/borhan/var/run/live-analytics-driver/live-analytics-driver.pid
ExecStartPre=/usr/bin/rm -f /opt/borhan/var/run/live-analytics-driver/live-analytics-driver.pid
ExecStart=/opt/borhan/bin/live-analytics-driver.sh start
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s SIGTERM $MAINPID

[Install]
WantedBy=multi-user.target
