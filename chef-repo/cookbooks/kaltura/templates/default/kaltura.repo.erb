# URL: http://borhan.org/
[Borhan]
name = Borhan Server
baseurl = <%= node[:borhan][:REPO_URL]%>/releases/latest/RPMS/$basearch/
gpgkey = <%= node[:borhan][:REPO_URL]%>/releases/RPM-GPG-KEY-borhan
gpgcheck = 1 
enabled = 1

[Borhan-noarch]
name = Borhan Server arch independent
baseurl = <%= node[:borhan][:REPO_URL]%>/releases/latest/RPMS/noarch
gpgkey = <%= node[:borhan][:REPO_URL]%>/releases/RPM-GPG-KEY-borhan
gpgcheck = 1
enabled = 1

[Borhan-testing]
name = Borhan Server arch independent
baseurl = <%= node[:borhan][:REPO_URL]%>/releases/nightly/RPMS/$basearch/
gpgkey = <%= node[:borhan][:REPO_URL]%>/releases/RPM-GPG-KEY-borhan
gpgcheck = 1 
enabled = 0

[Borhan-testing-noarch]
name = Borhan Server arch independent
baseurl = <%= node[:borhan][:REPO_URL]%>/releases/nightly/RPMS/noarch
gpgkey = <%= node[:borhan][:REPO_URL]%>/releases/RPM-GPG-KEY-borhan
gpgcheck = 1
enabled = 0
